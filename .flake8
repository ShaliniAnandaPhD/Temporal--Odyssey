[flake8]
# Maximum line length for the project
max-line-length = 120

# Exclude specific directories and files from linting
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    .tox,
    .eggs,
    *.egg-info,
    temporal_odyssey/tests/*,
    temporal_odyssey/ui/*,
    temporal_odyssey/envs/advanced_environment.py

# Ignore specific error codes
ignore =
    E203,  # Whitespace before ':'
    E266,  # Too many leading '#' for block comment
    E501,  # Line length (handled by max-line-length)
    W503,  # Line break before binary operator

# Specify additional built-in names
builtins = 
    temporal_odyssey,  # Adding project-specific built-ins

# Format for output
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s

# Show source code for each error
show-source = True

# Enable type annotations checking
enable-extensions = MYPY

# Specify the application layout
application-import-names = temporal_odyssey, tests

# Per-file-ignores
per-file-ignores =
    # Disable specific checks in test files
    temporal_odyssey/tests/*: D, S101, W503
    temporal_odyssey/ui/*: D, S101, W503

# Set up flake8 plugins (e.g., flake8-docstrings)
docstring-convention = google
